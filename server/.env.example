# Server Configuration
PORT=3000

# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/TaskWell?retryWrites=true&w=majority

# JWT Secret (use a secure random string in production)
# IMPORTANT: This must be the same across all environments (dev, staging, production)
# to ensure tokens generated in one environment work in another
JWT_SECRET=your_jwt_secret_here

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:5173

# Email Configuration (Brevo)
BREVO_API_KEY=your_brevo_api_key_here
FROM_EMAIL=your-verified-email@example.com
FROM_NAME=TaskWell

# Arcjet Security
ARCJET_ENV=development
ARCJET_KEY=your_arcjet_key_here
